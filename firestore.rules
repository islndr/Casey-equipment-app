rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ðŸ”¹ USERS Collection: Role-Based Access Control
    match /users/{userId} {
      allow read: if request.auth != null;

      // âœ… Ensure only admins can create users
      allow create: if request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";

      // âœ… Allow Admins to Update User Roles (Users Cannot Modify Their Own Role)
      allow update: if request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin" &&
        !(request.resource.data.keys().hasAny(["password"]));

      // âœ… Allow Admins to Delete Users
      allow delete: if request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

      // ðŸ”¹ SPEC SHEETS Collection
    match /specSheets/{specSheetId} {
       allow read: if true;

      // âœ… Only editors and admins can modify spec sheets
      allow write, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['editor', 'admin'];

      // ðŸ”¹ SPEC SHEET ROWS
      match /rows/{rowId} {
        allow read: if true;
        allow write, delete: if request.auth != null &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['editor', 'admin'];
      }

      // ðŸ”¹ SPEC SHEET COLUMNS
      match /columns/{columnId} {
         allow read: if true;
        allow write, delete: if request.auth != null &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['editor', 'admin'];
      }
    }

    // ðŸ”¹ TABS Collection
    match /tabs/{tabId} {
     allow read: if true;
      allow write, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['editor', 'admin'];
    }
        // ðŸ”¹ PDFs Collection - READ-ONLY ACCESS
    match /pdfs/{pdfId} {
      allow read: if true;  // âœ… Public read access for iOS app
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ["editor", "admin"];
    }
  }

  
}