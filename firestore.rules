rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ðŸ”¹ USERS Collection: Allow Admins to Create and Manage Users
    match /users/{userId} {
      allow read: if request.auth != null;

      // âœ… Ensure the admin exists and has role "admin" before creating users
      allow create: if request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";

      // âœ… Allow Admins to Update User Roles (Users Cannot Modify Their Own Role)
      allow update: if request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin" &&
        !(request.resource.data.keys().hasAny(["password"]));

      // âœ… Allow Admins to Delete Users
      allow delete: if request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // ðŸ”¹ SPEC SHEETS & ROWS (RBAC)
    match /specSheets/{sheetId} {
      allow read: if request.auth != null;
      allow write, delete: if exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                           get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['editor', 'admin'];
    }

    match /specSheetRows/{rowId} {
      allow read: if request.auth != null;
      allow write, delete: if exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                           get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['editor', 'admin'];
    }

    // ðŸ”¹ SPEC SHEET COLUMNS (RBAC)
    match /specSheetColumns/{columnId} {
      allow read: if request.auth != null;
      allow write, delete: if exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                           get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['editor', 'admin'];
    }

    // ðŸ”¹ TABS Collection (RBAC)
    match /tabs/{tabId} {
      allow read: if request.auth != null;
      allow write, delete: if exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                           get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['editor', 'admin'];
    }
  }
}